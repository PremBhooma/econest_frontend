{
  "name": "abodegroupscrm",
  "version": "1.0.4",
  "description": "Abode Groups CRM",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "cd app && npx vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:vite": "cd app && npx vite build",
    "build:electron": "electron-builder",
    "start": "electron .",
    "dist": "npm run build:vite && npm run build:electron",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "https://github.com/nayeshdaggula/abodegroupcromapp",
  "publish": {
    "provider": "github",
    "owner": "nayeshdaggula",
    "repo": "abodegroupcromapp",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.abodegroups.crm",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "index.js",
      "preload.js",
      "package.json",
      "dist/app/**/*"
    ],
    "directories": {
      "app": ".",
      "output": "dist"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "keywords": [],
  "author": "Abode Groups",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@iconify/react": "^6.0.0",
    "axios": "^1.11.0",
    "electron-updater": "^6.6.2",
    "react-router": "^7.8.0",
    "react-router-dom": "^7.8.0"
  }
}
